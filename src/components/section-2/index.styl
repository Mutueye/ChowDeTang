.section-services
	width 100%
	height auto
	.row-content
		overflow hidden
	.service-block
		width 100%
		height auto
		//box-shadow 0 0 30px 0px rgba(black,0.03)
		border 1px solid #ffffff
		display block
		text-decoration none
		transition(all 0.2s ease-in-out)
		&:hover
			border 1px solid OCEAN_BLUE
		.service-block-pic
			width 100%
			height auto
			overflow visible
			display block
			position relative
			img
				width 100%
				height auto
				display block
			.service-block-title
				width 100px
				height 36px
				border 4px solid #ffffff
				position absolute
				left 50%
				margin-left -52px
				text-align center
				font-size 18px
				line-height 36px
				background-color OCEAN_BLUE
				color #ffffff
				bottom -22px
				overflow visible
				&-deco
					width 100px
					height 10px
					background-color transparent
					position absolute
					border-top 1px solid YELLOW
					bottom -14px
					left 0px
					background-image url('images/section-2-title-deco.png')
					background-position top center
					background-repeat no-repeat
		.service-block-text
			width auto
			overflow hidden
			height auto
			background-color #ffffff
			padding 40px 30px 30px 30px
			font-size 14px
			line-height 24px
			color GRAY_33
			text-align center
