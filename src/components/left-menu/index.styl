.left-menu
	width 100%
	height auto
	display block
	overflow visible
	position relative
	background-color #ffffff
	padding 10px 0 0.1px 0
	.lm-title
		position absolute
		width 100%
		height 92px
		top -92px
		background-color #ffffff
		overflow visible
		.lm-title-content
			width auto
			margin 4px
			height 84px
			display block
			background-color OCEAN_BLUE
			.lm-title-cn
				width 100%
				text-align center
				font-size 24px
				height auto
				line-height 40px
				padding-top 10px
				color #ffffff
			.lm-title-en
				width 100%
				text-align center
				font-size 14px
				height auto
				line-height 20px
				color #ffffff
		.lm-title-deco
			position absolute
			width 100%
			height 11px
			left 0px
			bottom -11px
			.lm-title-deco-content
				margin 0px 20px
				height 9px
				border-top 2px solid YELLOW
				background-color transparent
				background-image url('images/left-menu-title-arrow.png')
				background-repeat no-repeat
				background-position center
	.lm-btn
		width auto
		display block
		height 56px
		margin 20px
		padding 0 0 0 20px
		line-height 56px
		overflow hidden
		color GRAY_66
		text-decoration none
		background-image url('images/left-menu-btn-arrow.png')
		background-repeat no-repeat
		background-position -30% center
		transition(all 0.2s ease-in-out)
		&:hover, &.sel
			background-color lighten(OCEAN_BLUE,80%)
			color OCEAN_BLUE
			background-position 85% center