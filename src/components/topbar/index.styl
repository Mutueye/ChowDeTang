.topbar
	width 100%
	height 84px
	background-color #ffffff
	position fixed
	z-index 9999
	box-shadow 0 0 20px 0px rgba(black,0.1)
	@media MOBILE
		height 54px
	.topbar-line
		width 100%
		height 4px
		background-color GRAY_E3
	.logo
		width 100px
		height 52px
		background-image url('images/logo.png')
		position absolute
		top 14px
		left 0px
		@media MOBILE
			width 50px
			height 26px
			background-size 100%
			top 12px
	.menu
		width auto
		height 84px
		overflow hidden
		position absolute
		top -4px
		right 0px
		@media MOBILE
			width 40%
			height auto
			top 54px
			right -40%
			bottom -100px
			display block
			position fixed
			z-index 9988
			background-color #f5f5f5
			transition(all 0.2s ease-out)
			&.show
				right 0px
		.menubtn
			float left
			width auto
			padding 0 30px
			line-height 80px
			font-size 14px
			color GRAY_66
			text-align center
			display block
			text-decoration none
			border-top 4px solid GRAY_E3
			transition(all 0.2s ease-in-out)
			@media MOBILE
				border none
				margin 0
				padding 0
				width 100%
				display block
				height auto
				line-height 60px
				border-bottom 1px solid GRAY_E3
				text-align center
				font-size 16px
				color GRAY_33
				text-decoration none
			&:hover
				background-color lighten(OCEAN_BLUE,20%)
				border-top 4px solid OCEAN_BLUE
				color #ffffff
				margin 0
				padding 0 30px
				@media MOBILE
					border-bottom 1px solid GRAY_E3
					border-top none
					padding 0px
					margin 0px
			&.sel
				margin 0 30px
				padding 0
				border-top 4px solid OCEAN_BLUE
				color OCEAN_BLUE
				@media MOBILE
					margin 0
					padding 0
					border-top none
					border-bottom 1px solid GRAY_E3
					color #ffffff
					background-color OCEAN_BLUE
				&:hover
					border-top 4px solid OCEAN_BLUE
					color OCEAN_BLUE
					background-color transparent
					cursor default
					@media MOBILE
						border-top none
						background-color OCEAN_BLUE
						color #ffffff
						padding 0
						margin 0		
		.menu-devider
			float left
			width 0px
			height 16px
			margin-top 36px
			display block
			border-left 1px dotted GRAY_E3
			@media MOBILE
				display none
	.btn-mobile-menu
		width 32px
		height 26px
		margin 9px 12px
		position absolute
		display none
		right 0px
		top 7px
		background-image url('images/icon-mobile-menu.png')
		background-repeat no-repeat
		background-position center center
		background-size 100%
		@media MOBILE
			display block
.topbar-space
	width 100%
	height 84px
	display block
	overflow hidden
	@media MOBILE
		height 54px
.mobile-menu-bg
	width auto
	height auto
	display none
	top -100px
	right -100px
	bottom -100px
	left -100px
	position fixed
	z-index 8888
	background-color rgba(black, .5)
	@media MOBILE
		display none
		&.show
			display block