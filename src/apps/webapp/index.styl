@require '../normalised'
@require '../global'
@require '../common'

body, html
	background-color GRAY_F5

h1
	font-size 60px
	color #333333

.section-title
	width 100%
	height auto
	display block
	margin 20px 0px
	@media MOBILE
		margin 5px 0px
	.section-title-cn
		width 100%
		height 30px
		text-align center
		display block
		@media MOBILE
			height 20px
		.section-title-arrow-left
			width 19px
			height 15px
			display inline-block
			background-image url('images/title-arrow-left.png')
			background-repeat no-repeat
			background-position center center
			@media MOBILE
				height 10px
				width 14px
				background-size 100%
		.section-title-cn-text
			width auto
			height 30px
			display inline-block
			font-size 24px
			line-height 30px
			padding 0px 6px
			color GRAY_33
			@media MOBILE
				height 20px
				font-size 18px
				line-height 20px
		.section-title-arrow-right
			width 19px
			height 15px
			display inline-block
			background-image url('images/title-arrow-right.png')
			background-repeat no-repeat
			background-position center center
			@media MOBILE
				height 10px
				width 14px
				background-size 100%
	.section-title-en
		width 100%
		height 20px
		line-height 20px
		text-align center
		font-size 14px
		color YELLOW
		@media MOBILE
			height 14px
			line-height 14px
			font-size 10px
.h-line
	width 100%
	height 1px
	background-color GRAY_E3
	display block
	margin-bottom COMMON_SPACE*2
	@media MOBILE
		margin-bottom COMMON_SPACE_MOBILE*2

